# ===========================================
# AchievingCoach Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# -------------------------------------------
# FIREBASE CONFIGURATION
# -------------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# -------------------------------------------
# GOOGLE ANALYTICS & TAG MANAGER
# -------------------------------------------
# Google Analytics 4 Measurement ID (starts with G-)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-9J43WG4NL7

# GA4 Property ID (numeric) - for server-side API
GA4_PROPERTY_ID=514516891

# Google Tag Manager Container ID (starts with GTM-)
NEXT_PUBLIC_GTM_ID=

# Google Search Console verification code
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your-verification-code

# GA4 Service Account Credentials (JSON string) - for analytics API
GA4_CREDENTIALS={"type":"service_account","project_id":"..."}

# -------------------------------------------
# HOTJAR (Heatmaps & Session Recording)
# -------------------------------------------
# Get your Site ID from: https://insights.hotjar.com/settings
NEXT_PUBLIC_HOTJAR_ID=

# -------------------------------------------
# MICROSOFT CLARITY (Free Heatmaps & Recording)
# -------------------------------------------
# Get your Project ID from: https://clarity.microsoft.com/
NEXT_PUBLIC_CLARITY_ID=

# -------------------------------------------
# CONTENTSQUARE (UX Analytics)
# -------------------------------------------
NEXT_PUBLIC_CONTENTSQUARE_ID=b009ac4a8eea2

# -------------------------------------------
# FACEBOOK / META PIXEL
# -------------------------------------------
NEXT_PUBLIC_FB_PIXEL_ID=

# -------------------------------------------
# LINKEDIN INSIGHT TAG
# -------------------------------------------
NEXT_PUBLIC_LINKEDIN_PARTNER_ID=

# -------------------------------------------
# TESTING
# -------------------------------------------
TEST_COACH_EMAIL=test-coach@achievingcoach.com
TEST_COACH_PASSWORD=TestCoach123!
TEST_COACHEE_EMAIL=test-coachee@achievingcoach.com
TEST_COACHEE_PASSWORD=TestCoachee123!
TEST_ADMIN_EMAIL=test-admin@achievingcoach.com
TEST_ADMIN_PASSWORD=TestAdmin123!

# -------------------------------------------
# OTHER INTEGRATIONS
# -------------------------------------------
# Google Calendar API (for booking system)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Stripe (for payments)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

