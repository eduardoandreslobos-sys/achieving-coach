rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOrgAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'org_admin';
    }

    function isCoachAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['org_admin', 'coach_admin'];
    }
    
    function isParticipant(participants) {
      return isAuthenticated() && request.auth.uid in participants;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if resource.data.role == 'coach';
      allow read: if isAuthenticated();
      allow update: if isOwner(userId);
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Conversations - only participants can read/write
    match /conversations/{conversationId} {
      allow read: if isAuthenticated() && request.auth.uid in resource.data.participants;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && request.auth.uid in resource.data.participants;
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow create: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }
    
    // Sessions
    match /sessions/{sessionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Goals
    match /goals/{goalId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Reflections
    match /reflections/{reflectionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Messages (legacy - for backwards compatibility)
    match /messages/{messageId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Tool assignments
    match /tool_assignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Tool results
    match /tool_results/{resultId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // ICF Questions
    match /icf_questions/{questionId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // ICF Simulation Results
    match /icf_simulation_results/{resultId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Blog Posts - Public read, admin write
    match /blog_posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Coaching Programs
    match /coaching_programs/{programId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Stakeholders
    match /stakeholders/{stakeholderId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Stakeholder Feedback (public write for portal)
    match /stakeholder_feedback/{feedbackId} {
      allow read: if isAuthenticated();
      allow create: if true;
      allow update: if isAuthenticated();
    }
    
    // Invitations
    match /invitations/{invitationId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Audit Logs - IMMUTABLE (HIPAA Compliance)
    // Can only be created, never updated or deleted
    match /audit_logs/{logId} {
      allow read: if isCoachAdmin();
      allow create: if isAuthenticated();
      allow update: if false; // Immutable
      allow delete: if false; // Immutable
    }

    // Consent Records (GDPR Compliance)
    match /consent_records/{recordId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if false; // Immutable consent records
      allow delete: if false; // Consent history must be preserved
    }

    // CRM - Leads
    match /leads/{leadId} {
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // CRM - Lead Activities
    match /lead_activities/{activityId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // CRM - Lead Tasks
    match /lead_tasks/{taskId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // Coach Directory - Public Profiles
    match /coach_profiles/{profileId} {
      allow read: if true; // Public directory
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Coach Directory - Inquiries
    match /coach_inquiries/{inquiryId} {
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow create: if true; // Public can submit inquiries
      allow update: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // Subscriptions
    match /subscriptions/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }

    // Billing History
    match /billing_history/{recordId} {
      allow read: if isAuthenticated() && resource.data.oderId == request.auth.uid;
      allow write: if isAdmin();
    }

    // Bookings
    match /bookings/{bookingId} {
      allow read: if isAuthenticated();
      allow create: if true; // Public can book
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // Booking Settings
    match /booking_settings/{userId} {
      allow read: if true; // Public needs to see availability
      allow write: if isOwner(userId);
    }

    // Resources
    match /resources/{resourceId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Program Enrollments
    match /programEnrollments/{enrollmentId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // DISC Results
    match /discResults/{resultId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // GROW Sessions
    match /growSessions/{sessionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Coach Reviews
    match /coach_reviews/{reviewId} {
      allow read: if true; // Public reviews
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.coacheeId == request.auth.uid;
    }

    // Client Health Scores (Customer Success)
    match /client_health_scores/{scoreId} {
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // Expansion Opportunities (Customer Success)
    match /expansion_opportunities/{opportunityId} {
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // Referrals
    match /referrals/{referralId} {
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // Success Stories
    match /success_stories/{storyId} {
      allow read: if true; // Public success stories
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // NPS Surveys
    match /nps_surveys/{surveyId} {
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // Review Requests
    match /review_requests/{requestId} {
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // Privacy Settings - stored within user document
    // Users can only modify their own privacy settings
  }
}
