rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isCoach(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'coach';
    }
    
    // Activities (para logging)
    match /activities/{activityId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Logs son inmutables
    }
    
    // Tool Results
    match /tool_results/{resultId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Users
    match /users/{userId} {
      // Allow public read of coach profiles (for invitation links)
      allow read: if isAuthenticated() || 
                     resource.data.role == 'coach';
      
      // Only owner can update their profile
      allow update: if isOwner(userId);
      
      // Allow creation during signup/onboarding
      allow create: if request.auth != null && 
                       request.auth.uid == userId;
    }
    
    // Goals
    match /goals/{goalId} {
      allow read, write: if isAuthenticated();
    }
    
    // Sessions
    match /sessions/{sessionId} {
      allow read, write: if isAuthenticated();
    }
    
    // Reflections
    match /reflections/{reflectionId} {
      allow read, write: if isAuthenticated();
    }
    
    // GROW Sessions
    match /grow_sessions/{sessionId} {
      allow read, write: if isAuthenticated();
    }
    
    // Tool assignments
    match /tool_assignments/{assignmentId} {
      allow read, write: if isAuthenticated();
    }
    
    // Wheel of Life
    match /wheel_of_life/{assessmentId} {
      allow read, write: if isAuthenticated();
    }
    
    // DISC Results
    match /disc_results/{resultId} {
      allow read, write: if isAuthenticated();
    }
    
    // Coaches
    match /coaches/{coachId} {
      allow read, write: if isAuthenticated();
    }
    
    // Coachees
    match /coachees/{coacheeId} {
      allow read, write: if isAuthenticated();
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
  }
}
